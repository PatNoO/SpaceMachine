<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatusDispFragment">


    <TextView
        android:id="@+id/tv_head_status_fsd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/afacad_bold"
        android:text="Status Display"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_engine_info_fsd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/afacad_bold"
        android:text="Drive System Overview"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_head_status_fsd" />

    <TextView
        android:id="@+id/tv_engine_hyper_drive_fsd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hyper Drive"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="177dp" />

    <TextView
        android:id="@+id/tv_fuel_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hyper Drive"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="177dp" />

    <TextView
        android:id="@+id/tv_engine_hyper_drive_fsd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hyper Drive"
        tools:layout_editor_absoluteX="212dp"
        tools:layout_editor_absoluteY="177dp" />

    <TextView
        android:id="@+id/tv_engine_hyper_drive_fsd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hyper Drive"
        tools:layout_editor_absoluteX="322dp"
        tools:layout_editor_absoluteY="168dp" />


</androidx.constraintlayout.widget.ConstraintLayout>