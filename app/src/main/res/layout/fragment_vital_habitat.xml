<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.VitalHabitatFragment">

    <TextView
        android:id="@+id/tv_head_energy_fec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="122dp"
        android:fontFamily="@font/afacad_bold"
        android:text="Vital Habitat System"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_head_energy_fec" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_temp_fvh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Temperature"
                android:textAlignment="center"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_oxygen_lvl_fvh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Oxygen Level"
                android:textAlignment="center"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/tv_temp_fvh"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_temp_info_fvh"
                app:layout_constraintEnd_toEndOf="@+id/tv_temp_fvh"
                app:layout_constraintStart_toStartOf="@+id/tv_temp_fvh"
                app:layout_constraintTop_toBottomOf="@+id/tv_temp_fvh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="tmep info"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tv_oxygen_info_fvh"
                app:layout_constraintEnd_toEndOf="@+id/tv_oxygen_lvl_fvh"
                app:layout_constraintStart_toStartOf="@+id/tv_oxygen_lvl_fvh"
                app:layout_constraintTop_toBottomOf="@+id/tv_oxygen_lvl_fvh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="oxygen Info" />

            <TextView
                android:id="@+id/tv_pressure_fvh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Pressure"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_temp_fvh"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_pressure_info_fvh"
                app:layout_constraintEnd_toEndOf="@+id/tv_pressure_fvh"
                app:layout_constraintStart_toStartOf="@+id/tv_pressure_fvh"
                app:layout_constraintTop_toBottomOf="@+id/tv_pressure_fvh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="pressure info" />

            <TextView
                android:id="@+id/tv_warning_info_fvh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="52dp"
                android:text="Warnings info"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/btn_simulate_emer_fvh"
                app:layout_constraintStart_toStartOf="@+id/btn_simulate_emer_fvh" />

            <androidx.constraintlayout.widget.Barrier
                app:barrierDirection="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_simulate_emer_fvh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Simulate Emergency"
                app:layout_constraintBottom_toTopOf="@+id/tv_warning_info_fvh"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>